NDK=/Applications/android-ndk-r20b
TOOLCHAIN=$(NDK)/toolchains/llvm/prebuilt/darwin-x86_64
ARCH=arm64
CPU=armv8-a
API:=24
CC=$(TOOLCHAIN)/bin/aarch64-linux-android$(API)-clang
CXX=$(TOOLCHAIN)/bin/aarch64-linux-android$(API)-clang++

SRC_DIRS=../../src/dhfilter
SRC=$(foreach TMP_SRC_DIRS, $(SRC_DIRS), $(wildcard $(TMP_SRC_DIRS)/*.c))
TARGET=../../output/android/arm64-v8a/libdhfilter.so
OBJ:=$(SRC:.c=.o)

INC_EXTERN=-I../../src/dhfilter -I../../dependency/src/cjson
LIB_EXTERN=-L../../dependency/lib/android/arm64-v8a
INCLUDE=$(INC_EXTERN)
DEP_LIB=-lcjson   $(LIB_EXTERN)

all: $(TARGET)
$(TARGET):$(OBJ)
	$(CC) -shared -Wall -g -o  $(TARGET) $(OBJ) $(DEP_LIB);
%.o:%.c
	$(CC) -DDEBUG -Wall -g -fPIC -std=c99 $(INCLUDE) -o $@ -c $<
	
.PHONY:clean
clean:
	-rm -f $(OBJ) $(TARGET)
